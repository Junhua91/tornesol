<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <!-- redis config -->
    <bean id="mainJedisConnFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
        <property name="hostName" value="${redis.main.host}" />
        <property name="port" value="${redis.main.port}" />
        <property name="password" value="${redis.main.password}" />
        <property name="database" value="${redis.main.db}" />
        <property name="timeout" value="${redis.main.timeout}" />
        <property name="usePool" value="true" />
    </bean>

    <bean id="mainRedisTemplate" class="org.springframework.data.redis.core.RedisTemplate">
        <property name="connectionFactory" ref="mainJedisConnFactory" />
    </bean>
</beans>