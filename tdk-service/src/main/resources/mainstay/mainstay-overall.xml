<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
  <!-- mainstay client overall config -->
  <bean id="mainstayConfig" class="com.ximalaya.mainstay.spring.config.MainstayConfig">
    <property name="zkConnectString" value="${mainstay.zookeeper.connectString}" />
    <property name="webConsoleUrl" value="${mainstay.webConsole.url}" />
    <property name="zkSessionTimeoutMills" value="${mainstay.zookeeper.timeout.session}" />
    <property name="zkConnectionTimeoutMills" value="${mainstay.zookeeper.timeout.connection}" />
  </bean>

  <bean id="poolConfig" class="com.ximalaya.mainstay.spring.config.ConnectionPoolConfig">
    <property name="maxTotal" value="${thrift.connectionPool.maxTotal}" />
    <property name="minIdle" value="${thrift.connectionPool.minIdle}" />
    <property name="maxIdle" value="${thrift.connectionPool.maxIdle}" />
  </bean>
</beans>
