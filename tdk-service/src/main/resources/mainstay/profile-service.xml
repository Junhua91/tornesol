<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- profile service -->
    <bean id="profileServiceClientConfig" class="com.ximalaya.mainstay.spring.config.ClientConfig">
        <property name="group" value="${mainstay.services.profile.serviceGroup}" />
        <property name="scatterGather" value="${mainstay.scatterGather}" />
        <property name="isMultiplex" value="${mainstay.services.profile.isMultiplex}" />
        <property name="timeout" value="${mainstay.timeout}" />
        <property name="routingType" value="${mainstay.routingType}" />
    </bean>

    <!-- profile service: user-query-info -->
    <bean class="com.ximalaya.mainstay.spring.thrift.MainstayClient">
        <property name="ifaceClass" value="com.ximalaya.service.profile.thrift.RemoteUserInfoQueryService.Iface" />
        <property name="clientConfig" ref="profileServiceClientConfig" />
        <property name="mainstayConfig" ref="mainstayConfig" />
        <property name="poolConfig" ref="poolConfig" />
    </bean>

</beans>