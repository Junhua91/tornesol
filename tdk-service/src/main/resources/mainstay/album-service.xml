<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

  <bean id="albumServiceClientConfig" class="com.ximalaya.mainstay.spring.config.ClientConfig">
    <property name="group" value="${mainstay.services.album.serviceGroup}" />
    <property name="scatterGather" value="${mainstay.scatterGather}" />
    <property name="isMultiplex" value="${mainstay.services.album.isMultiplex}" />
    <property name="timeout" value="${mainstay.timeout}" />
    <property name="routingType" value="${mainstay.routingType}" />
  </bean>

  <bean id="albumServiceThriftClient" class="com.ximalaya.mainstay.spring.thrift.MainstayClient">
    <property name="ifaceClass" value="com.ximalaya.service.album.api.IAlbumFacadeHandler.Iface" />
    <property name="clientConfig" ref="albumServiceClientConfig" />
    <property name="mainstayConfig" ref="mainstayConfig" />
    <property name="poolConfig" ref="poolConfig" />
  </bean>
</beans>
